{
  "$ref": "#/definitions/posts",
  "definitions": {
    "posts": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "excerpt": {
          "type": "string"
        },
        "author": {
          "type": "string",
          "default": "Noticiencias"
        },
        "date": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "image": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "properties": {
                "src": {
                  "type": "string"
                },
                "width": {
                  "type": "number"
                },
                "height": {
                  "type": "number"
                },
                "alt": {
                  "type": "string"
                }
              },
              "required": [
                "src",
                "width",
                "height"
              ],
              "additionalProperties": false
            }
          ]
        },
        "image_alt": {
          "type": "string"
        },
        "permalink": {
          "type": "string"
        },
        "translation_method": {
          "type": "string"
        },
        "editorial_score": {
          "type": "number"
        },
        "review_status": {
          "type": "string"
        },
        "confidence": {
          "type": "string"
        },
        "investigation": {
          "type": "boolean",
          "default": false
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "fact_check": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "status": {
                "type": "string"
              }
            },
            "required": [
              "label",
              "status"
            ],
            "additionalProperties": false
          }
        },
        "why_it_matters": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "series": {
          "type": "string"
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "publisher": {
                "type": "string"
              },
              "date": {
                "type": "string"
              }
            },
            "required": [
              "title",
              "url"
            ],
            "additionalProperties": false
          }
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "date"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}