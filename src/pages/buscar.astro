---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Buscar Noticias">
    <section class="px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
        <header>
            <h1 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-8 font-heading text-center">
                Buscador
            </h1>
        </header>
        
        <div class="search-container mx-auto max-w-3xl">
            <form id="search-form" class="relative" role="search">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                    </svg>
                </div>
                <input type="text" id="search-box" class="block w-full p-4 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Escribe para buscar..." required>
                <button type="submit" class="absolute right-2.5 bottom-2.5 bg-primary-700 text-white hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Buscar</button>
            </form>
            
            <p id="search-status" class="text-sm text-gray-500 mt-2 text-center min-h-[1.5rem]"></p>
            
            <div id="search-results" class="mt-8"></div>
        </div>
    </section>

    <!-- Load Lunr from CDN -->
    <script is:inline src="https://unpkg.com/lunr/lunr.js"></script>
    
    <script>
        import { updateUrlWithQuery, getQueryFromUrl, normalizeQuery } from '../utils/search-url';

        let index = null;
        let store = {};

        async function bootSearch() {
            // Prevent double init on same page load if events overlap
            // But strict idempotency is handled by checking if we are on the search page
            const input = document.getElementById('search-box') as HTMLInputElement;
            const status = document.getElementById('search-status');
            const form = document.getElementById('search-form');
            
            // If we are not on the search page, do nothing
            if (!input || !status) return;

            // Reset state for new navigation
            index = null;
            store = {};
            
            status.innerHTML = '<span class="text-gray-500 animate-pulse">Cargando índice de búsqueda...</span>';
            input.disabled = true;

            try {
                // Should force-cache to avoid network spam, managed by browser/service worker
                const response = await fetch('/search.json', { cache: 'force-cache' });
                
                if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);
                
                const documents = await response.json();
                
                if (!Array.isArray(documents) || documents.length === 0) {
                     status.textContent = 'El índice de búsqueda está vacío.';
                     return;
                }
                
                // Build Index
                // @ts-expect-error Lunr loaded via CDN script
                index = lunr(function () {
                    this.ref('url');
                    this.field('title', { boost: 10 });
                    this.field('description', { boost: 5 });
                    this.field('content');
                    this.field('tags');
                    
                    documents.forEach(doc => {
                        // Normalize fields for better matching
                        const normalizedDoc = {
                            ...doc,
                            title: normalizeQuery(doc.title),
                            description: normalizeQuery(doc.description),
                            content: normalizeQuery(doc.content),
                            // Tags are array, join then normalize
                            tags: doc.tags ? normalizeQuery(doc.tags.join(' ')) : ''
                        };

                        this.add(normalizedDoc);
                        store[doc.url] = doc; // Store original for display
                    });
                });

                status.textContent = '';
                input.disabled = false;
                
                // Attach event listener to form (replaces old ones automatically as DOM is fresh or we re-attach)
                // Use 'submit' to capture both Enter and Button
                if (form) {
                    // Remove old listener if any (safety pattern, though mostly fresh DOM in Astro)
                    const newForm = form.cloneNode(true) as HTMLElement;
                    form.parentNode?.replaceChild(newForm, form);
                    
                    newForm.addEventListener('submit', (e) => {
                        e.preventDefault();
                        const currentInput = document.getElementById('search-box') as HTMLInputElement;
                        if (currentInput) {
                             runSearch(currentInput.value);
                        }
                    });
                     // Re-acquire input ref after clone
                     const newInput = document.getElementById('search-box') as HTMLInputElement;
                     if(newInput) { 
                        newInput.focus();
                        // Restore value if needed, but usually empty on fresh load
                     }
                }

                // Check URL for existing query and execute immediately
                const initialQuery = getQueryFromUrl();
                const currentInput = document.getElementById('search-box') as HTMLInputElement;
                if (initialQuery && currentInput) {
                    currentInput.value = initialQuery;
                    runSearch(initialQuery);
                }

            } catch (e) {
                console.error("Search init error:", e);
                status.textContent = 'Error al cargar el buscador. Por favor recarga la página.';
            }
        }

        function runSearch(query) {
            const resultsDiv = document.getElementById('search-results');
            const status = document.getElementById('search-status');
            
            if (!resultsDiv) return;
            
            resultsDiv.innerHTML = '';
            
             if (!query || !query.trim()) {
                updateUrlWithQuery('');
                if(status) status.textContent = '';
                return;
            }

            // Update URL
            updateUrlWithQuery(query);

            const normalizedQuery = normalizeQuery(query);

            // Fuzzy matching + wildcard
            try {
                // @ts-expect-error Lunr index type not available
                const results = index.search(`${normalizedQuery}*`);

                if (results.length === 0) {
                    if(status) status.textContent = '';
                    resultsDiv.innerHTML = '<div class="text-center py-8"><p class="text-xl text-gray-500 dark:text-gray-400">No se encontraron resultados para "<b>' + query + '</b>".</p></div>';
                    return;
                }

                if(status) status.textContent = `Se encontraron ${results.length} resultados.`;

                const ul = document.createElement('ul');
                ul.className = 'grid gap-6 md:grid-cols-1';
                resultsDiv.appendChild(ul);

                results.slice(0, 20).forEach(r => {
                    const doc = store[r.ref];
                    if(!doc) return;

                    const li = document.createElement('li');
                    li.className = 'flex flex-col sm:flex-row bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 dark:bg-gray-800 dark:border-gray-700 overflow-hidden';
                    
                    let imageHtml = '';
                    if (doc.image) {
                         imageHtml = `
                            <a href="${doc.url}" class="block sm:w-48 h-48 sm:h-auto flex-shrink-0">
                                <img src="${doc.image}" alt="${doc.title}" class="object-cover w-full h-full" loading="lazy" />
                            </a>
                         `;
                    }

                    li.innerHTML = `
                        ${imageHtml}
                        <div class="flex flex-col p-6 leading-normal">
                             <h3 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                                <a href="${doc.url}" class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">${doc.title}</a>
                            </h3>
                            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400 line-clamp-3">${doc.description || ''}</p>
                            ${doc.tags ? `<div class="mt-auto text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider">${doc.tags}</div>` : ''}
                        </div>
                    `;
                    ul.appendChild(li);
                });
            } catch (e) {
                // Lunr query error
                console.error("Search error:", e);
                if(status) status.textContent = 'Error al realizar la búsqueda.';
            }
        }

        // Initialize on every page navigation (Astro ViewTransitions / ClientRouter)
        document.addEventListener('astro:page-load', bootSearch);
        
        // Fallback for initial load if astro:page-load doesn't fire (though it should)
        // or for non-SPA modes.
        document.addEventListener('DOMContentLoaded', () => {
            // Check if we are in a state where astro:page-load will NOT fire
            // But simplest is just to call it, bootstrapping is robust enough to handle checks
            bootSearch();
        });

    </script>
</BaseLayout>
