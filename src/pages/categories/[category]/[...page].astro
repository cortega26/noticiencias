---
import { getCollection } from 'astro:content';
import BaseLayout from '~/layouts/BaseLayout.astro';
import Headline from '~/components/template/blog/Headline.astro';
import BlogList from '~/components/template/blog/List.astro';
import Pagination from '~/components/template/blog/Pagination.astro';
import { getPermalink } from '~/utils/permalinks';

export async function getStaticPaths({ paginate }) {
  const allPosts = await getCollection('posts');
  // Get all unique categories
  const categories = new Set();
  allPosts.forEach(post => {
    post.data.categories?.forEach(cat => categories.add(cat));
  });

  return Array.from(categories).flatMap(category => {
    // Filter posts by category
    const posts = allPosts.filter(post => post.data.categories?.includes(category));
    // Sort by date
    posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

    return paginate(posts, {
      params: { category: category },
      pageSize: 10,
      props: { categoryName: category },
    });
  });
}

const { page, categoryName } = Astro.props;
const metadata = {
  title: `Categoría: ${categoryName}`,
  robots: {
    index: true,
    follow: true,
  },
};
---

<BaseLayout metadata={metadata}>
  <section class="px-4 md:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <Headline>
        Categoría: <span class="capitalize">{categoryName}</span>
    </Headline>
    
    <BlogList posts={page.data} />
    
    <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
  </section>
</BaseLayout>
