---
import { twMerge } from 'tailwind-merge';

interface Props {
  variant?: 'elevated' | 'outline' | 'flat';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
}

const {
  variant = 'elevated',
  padding = 'md',
  href,
  class: className = '',
} = Astro.props;

const variants = {
  elevated: "bg-surface-paper shadow-sm hover:shadow-md border border-transparent dark:border-border-subtle",
  outline: "bg-transparent border border-border-subtle",
  flat: "bg-surface-highlight border-transparent",
};

const paddings = {
  none: "",
  sm: "p-3",
  md: "p-5",
  lg: "p-8",
};

const baseStyles = "rounded-lg transition-all duration-300 block overflow-hidden";
const Tag = href ? 'a' : 'div';
---

<Tag href={href} class={twMerge(baseStyles, variants[variant], paddings[padding], className)}>
  <slot name="image" />
  
  <div class="flex flex-col gap-3">
    <slot name="header" />
    <slot name="body" />
    <div class="mt-auto">
      <slot name="footer" />
    </div>
  </div>
</Tag>
