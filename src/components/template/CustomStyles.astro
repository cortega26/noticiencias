---
import '@fontsource-variable/inter';
import '@fontsource/merriweather';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Merriweather';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(15 23 42);
    --aw-color-secondary: rgb(30 41 59);
    --aw-color-accent: rgb(14 165 233);

    --aw-color-text-heading: rgb(15 23 42);
    --aw-color-text-default: rgb(51 65 85);
    --aw-color-text-muted: rgb(100 116 139);
    --aw-color-bg-page: rgb(255 255 255);
    
    /* New Semantic Colors */
    --aw-color-bg-paper: rgb(248 250 252); /* slate-50 */
    --aw-color-bg-highlight: rgb(241 245 249); /* slate-100 */
    --aw-color-border: rgb(226 231 235); /* gray-200 */

    --aw-color-bg-page-dark: rgb(2 6 23);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Merriweather';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(56 189 248);
    --aw-color-secondary: rgb(14 165 233);
    --aw-color-accent: rgb(14 165 233);

    --aw-color-text-heading: rgb(247 248 248);
    --aw-color-text-default: rgb(203 213 225);
    --aw-color-text-muted: rgb(148 163 184);
    --aw-color-bg-page: rgb(2 6 23);
    
    /* New Semantic Colors (Dark) */
    --aw-color-bg-paper: rgb(15 23 42); /* slate-900 */
    --aw-color-bg-highlight: rgb(30 41 59); /* slate-800 */
    --aw-color-border: rgb(51 65 85); /* slate-700 */

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
